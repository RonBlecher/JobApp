@model JobApp.Models.SeekerSkillViewModel

@{
    ViewData["Title"] = "My Skills";
    Layout = LayoutDecision.LocateLayout(User);
}

<h1>My Job Skills</h1>

<h4>Skills</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MySkills">
            <div class="form-group">
                @for (int i = 0; i < Model.SkillCheckBoxItems.Count; i++)
                {
                    // only works with 'Model.SkillCheckBoxItems[i]'
                    @Html.HiddenFor(x => Model.SkillCheckBoxItems[i].SkillName);
                    @Html.EditorFor(x => Model.SkillCheckBoxItems[i].IsChecked, new { id = Model.SkillCheckBoxItems[i].SkillName });
                    <text>&nbsp;</text>
                    @Html.LabelFor(x => Model.SkillCheckBoxItems[i].IsChecked, Model.SkillCheckBoxItems[i].SkillName, new { style = "color:black" });
                    <br /><br />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
