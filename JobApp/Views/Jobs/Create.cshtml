@model JobApp.Models.Job

@{
    ViewData["Title"] = "Create";
    List<SelectListItem> listItems = new List<SelectListItem>();
    var publisher = (List<Publisher>)ViewData["Publishers"];
    publisher.ForEach(publisher =>
    {
        listItems.Add(new SelectListItem
        {
            Text = publisher.Name,
            Value = publisher.ID.ToString()
        });
    });
}

<h1>Create</h1>

<h4>Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher" class="control-label"></label>
                @Html.DropDownListFor(model => model.Publisher, listItems, "-- Select Publisher --")

                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
