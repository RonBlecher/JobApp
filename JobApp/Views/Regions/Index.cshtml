@model IEnumerable<JobApp.Models.RegionListView>

@{
    ViewData["Title"] = "Regions List";
    Layout = LayoutDecision.LocateLayout(User);
}


<h1>Regions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="content2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Regions</h4>
                        <p class="card-category"> All regions information</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Cities)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.RegionJobsNum)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.ListBox("Region Cities", new SelectList(item.Cities))
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RegionJobsNum)
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Name">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Name">Delete</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>